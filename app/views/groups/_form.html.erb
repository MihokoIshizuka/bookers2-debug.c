<%= form_with model:group, local:true do |f| %>
  <div class="form-group">
    <%= f.label :グループ名 %>
    <%= f.text_field :name, class: 'form-control group_name' %>
  </div>
  <div class="form-group">
    <%= f.label :紹介文 %>
    <%= f.text_area :introduction, class: 'form-control group_introduction' %>
  </div>
  <div class="form-group">
    <%= f.label :グループ画像 %>
    <%= f.file_field :image, class: "form-control-file　image", accept: 'image/*' %>
  <div class="form-group">
    <%= f.submit index:'Create Group', edit:'Update Group', class: 'btn btn-success' %>
  </div>
<% end %>
